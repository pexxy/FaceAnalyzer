<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PocetnaUser">

    <ImageButton
        android:id="@+id/btnProfil"
        android:layout_width="102dp"
        android:layout_height="88dp"
        android:background="@color/pozadina"
        android:scaleType="centerCrop"
        android:onClick="showProfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/btnInfo"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="68dp"
        android:layout_height="75dp"
        android:background="@color/pozadina"
        android:scaleType="fitCenter"
        android:onClick="showInfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProfil"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <Button
        android:id="@+id/btnPocniIspitivanje"
        android:layout_width="154dp"
        android:layout_height="68dp"
        android:background="@color/dugme_tamnije"
        android:onClick="pocniIspitivanje"
        android:text="Započnite ispitivanje"
        android:textColor="@color/pozadina"
        app:backgroundTint="@color/tamna"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>