<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prijava">

    <TextView
        android:layout_width="183dp"
        android:layout_height="42dp"
        android:layout_x="147dp"
        android:layout_y="204dp"
        android:text="Izaberite ulogu:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/tamna"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <Button
        android:id="@+id/btnAdmin"
        android:layout_width="113dp"
        android:layout_height="67dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_x="71dp"
        android:layout_y="415dp"
        android:onClick="chooseAdmin"
        android:text="ADMIN"
        app:backgroundTint="@color/dugme_tamnije"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/btnKorisnik"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_x="257dp"
        android:layout_y="409dp"
        android:onClick="chooseUser"
        android:text="KORISNIK"
        app:backgroundTint="@color/dugme_tamnije"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.624"
        app:layout_constraintStart_toEndOf="@+id/btnAdmin"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>